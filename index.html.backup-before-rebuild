  .skill-card:hover,
  .project-card:hover,
  .widget:hover {
    transform: none !important;
  }
  
  /* Ensure active states work */
  .btn:active {
    transform: scale(0.97) !important;
  }
  
  .skill-card:active,
  .project-card:active {
    transform: scale(0.98) !important;
  }
}

