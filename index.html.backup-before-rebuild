<script>
// Mobile Navigation
const mobileNav = document.getElementById('mobileNav');
const navToggle = document.querySelector('.nav__toggle');

function toggleMobileMenu() {
  const isOpen = mobileNav.classList.toggle('is-open');
  navToggle.classList.toggle('is-active');
  navToggle.setAttribute('aria-expanded', isOpen);
  mobileNav.setAttribute('aria-hidden', !isOpen);
  document.body.style.overflow = isOpen ? 'hidden' : '';
}

function closeMobileMenu() {
  mobileNav.classList.remove('is-open');
  navToggle.classList.remove('is-active');
  navToggle.setAttribute('aria-expanded', 'false');
  mobileNav.setAttribute('aria-hidden', 'true');
  document.body.style.overflow = '';
}

document.addEventListener('keydown', (e) => {
  if (e.key === 'Escape' && mobileNav.classList.contains('is-open')) {
    closeMobileMenu();
  }
});

// Contact Form
const contactForm = document.getElementById('contactForm');
const formFields = contactForm.querySelectorAll('.form-group__input, .form-group__textarea');

function validateField(field) {
  const formGroup = field.closest('.form-group');
  const value = field.value.trim();
  let isValid = field.type === 'email' 
    ? /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(value) 
    : value.length > 0;
  field.classList.toggle('is-error', !isValid);
  formGroup.classList.toggle('has-error', !isValid);
  return isValid;
}

formFields.forEach(field => {
  field.addEventListener('blur', () => validateField(field));
  field.addEventListener('input', () => {
    if (field.classList.contains('is-error')) validateField(field);
  });
});

// =============================================================================
// Phase 5: Contact Form Backend Integration
// =============================================================================

const CONTACT_FORM_CONFIG = {
  // Set this to your deployed Google Apps Script Web App URL
  appsScriptUrl: 'https://script.google.com/macros/s/AKfycbwNJ-61QlWVpkguYxqOYNXAvSnDjY5JjQMOqUPjpi2gFguNp1_J5HOpbhZEgF-_td2H/exec',

  // Fallback email if Apps Script is not configured
  fallbackEmail: 'ajgreenboy@gmail.com'
};

contactForm.addEventListener('submit', async (e) => {
  e.preventDefault();
  
  // Validate all fields
  let isFormValid = true;
  formFields.forEach(field => {
    if (!validateField(field)) isFormValid = false;
  });
  
  if (!isFormValid) return;
  
  // Get form data
  const formData = {
    name: document.getElementById('name').value.trim(),
    email: document.getElementById('email').value.trim(),
    message: document.getElementById('message').value.trim(),
    timestamp: new Date().toISOString(),
    source: 'portfolio-contact-form'
  };
  
  // Get submit button and save original state
  const submitBtn = contactForm.querySelector('button[type="submit"]');
  const originalContent = submitBtn.innerHTML;
  
  // Show loading state
  submitBtn.disabled = true;
  submitBtn.innerHTML = `
    <svg class="spinner" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="18" height="18" style="animation: spin 1s linear infinite;">
      <circle cx="12" cy="12" r="10" stroke-opacity="0.25"/>
      <path d="M12 2a10 10 0 0 1 10 10" stroke-linecap="round"/>
    </svg>
    Sending...
  `;
  
  try {
    if (CONTACT_FORM_CONFIG.appsScriptUrl) {
      // Use Google Apps Script backend
      const response = await fetch(CONTACT_FORM_CONFIG.appsScriptUrl, {
        method: 'POST',
        mode: 'no-cors', // Required for Apps Script
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(formData)
      });
      
      // Note: no-cors mode doesn't return response body, so we assume success
      // In production, you might want to use a different approach
      showToast("Message sent! I'll respond within 24 hours.", 'success');
      contactForm.reset();
      
      // Reset validation states
      formFields.forEach(field => {
        field.classList.remove('is-valid', 'is-error');
        field.closest('.form-group').classList.remove('is-valid', 'has-error');
      });
      
    } else {
      // Fallback: Open mailto link
      const subject = encodeURIComponent(`Portfolio Contact from ${formData.name}`);
      const body = encodeURIComponent(
        `Name: ${formData.name}\n` +
        `Email: ${formData.email}\n\n` +
        `Message:\n${formData.message}\n\n` +
        `---\nSent from unfunky.xyz contact form`
      );
      
      window.location.href = `mailto:${CONTACT_FORM_CONFIG.fallbackEmail}?subject=${subject}&body=${body}`;
      
      showToast('Opening your email client...', 'success');
      
      // Reset form after a short delay
      setTimeout(() => {
        contactForm.reset();
        formFields.forEach(field => {
          field.classList.remove('is-valid', 'is-error');
          field.closest('.form-group').classList.remove('is-valid', 'has-error');
        });
      }, 1000);
    }
    
  } catch (error) {
    console.error('Form submission error:', error);
    
    // Offer fallback
    const useFallback = confirm(
      'There was an issue sending your message. Would you like to send it via email instead?'
    );
    
    if (useFallback) {
      const subject = encodeURIComponent(`Portfolio Contact from ${formData.name}`);
      const body = encodeURIComponent(
        `Name: ${formData.name}\n` +
        `Email: ${formData.email}\n\n` +
        `Message:\n${formData.message}`
      );
      window.location.href = `mailto:${CONTACT_FORM_CONFIG.fallbackEmail}?subject=${subject}&body=${body}`;
    } else {
      showToast('Please try emailing me directly at ' + CONTACT_FORM_CONFIG.fallbackEmail, 'error');
    }
    
  } finally {
    // Restore button state
    submitBtn.disabled = false;
    submitBtn.innerHTML = originalContent;
  }
});

// Add spinner animation
const spinnerStyle = document.createElement('style');
spinnerStyle.textContent = `
  @keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }
`;
document.head.appendChild(spinnerStyle);

function showToast(message, type = 'success') {
  const toast = document.getElementById('toast');
  const toastMessage = document.getElementById('toastMessage');
  toastMessage.textContent = message;
  toast.className = 'toast' + (type === 'error' ? ' toast--error' : '');
  toast.classList.add('is-visible');
  setTimeout(() => {
    toast.classList.remove('is-visible');
  }, 4000);
}

// ATS Modal
function openATSModal() {
  document.getElementById('atsModal').classList.add('is-visible');
  document.body.style.overflow = 'hidden';
}

function closeATSModal(event) {
  if (event && event.target !== event.currentTarget) return;
  document.getElementById('atsModal').classList.remove('is-visible');
  document.body.style.overflow = '';
}

function copyATSResume() {
  const content = document.querySelector('.modal__content').textContent;
  navigator.clipboard.writeText(content).then(() => {
    showToast('Resume copied to clipboard!', 'success');
  }).catch(() => {
    showToast('Failed to copy. Please select and copy manually.', 'error');
  });
}

// Close modal on escape key
document.addEventListener('keydown', (e) => {
  if (e.key === 'Escape') {
    const modal = document.getElementById('atsModal');
    if (modal && modal.classList.contains('is-visible')) {
      closeATSModal();
    }
    if (mobileNav.classList.contains('is-open')) {
      closeMobileMenu();
    }
  }
});

// =============================================================================
// Phase 3: Interactive Elements & Animations
// =============================================================================

// --------------------------------------------------------------------------
// Count-Up Animation for Dashboard Stats
// --------------------------------------------------------------------------
function animateCountUp(element, target, duration = 2000, suffix = '') {
  const start = 0;
  const startTime = performance.now();
  
  // Parse target - handle percentages and formatted numbers
  let numericTarget = parseFloat(target.replace(/[^0-9.]/g, ''));
  const hasDecimal = target.includes('.');
  
  function update(currentTime) {
    const elapsed = currentTime - startTime;
    const progress = Math.min(elapsed / duration, 1);
    
    // Easing function (ease-out cubic)
    const easeOut = 1 - Math.pow(1 - progress, 3);
    const current = start + (numericTarget - start) * easeOut;
    
    // Format the number
    let displayValue;
    if (hasDecimal) {
      displayValue = current.toFixed(1);
    } else if (numericTarget >= 1000) {
      displayValue = Math.floor(current).toLocaleString();
    } else {
      displayValue = Math.floor(current);
    }
    
    element.textContent = displayValue + suffix;
    
    if (progress < 1) {
      requestAnimationFrame(update);
    }
  }
  
  requestAnimationFrame(update);
}

// Initialize count-up when stats come into view
function initCountUpAnimations() {
  const statElements = [
    { id: 'stat-uptime', target: '99.7', suffix: '%' },
    { id: 'stat-security', target: '2847', suffix: '' },
    { id: 'stat-containers', target: '24', suffix: '' },
    { id: 'stat-storage', target: '6', suffix: ' TB' },
    { id: 'stat-cpu', target: '24', suffix: '%' },
    { id: 'stat-ram', target: '42', suffix: '%' }
  ];
  
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        const el = entry.target;
        const stat = statElements.find(s => s.id === el.id);
        if (stat && !el.dataset.animated) {
          el.dataset.animated = 'true';
          // Small delay before starting animation
          setTimeout(() => {
            animateCountUp(el, stat.target, 1500, stat.suffix);
          }, 200);
        }
      }
    });
  }, { threshold: 0.5 });
  
  statElements.forEach(stat => {
    const el = document.getElementById(stat.id);
    if (el) {
      // Set initial value to 0
      el.textContent = '0' + stat.suffix;
      observer.observe(el);
    }
  });
}

// --------------------------------------------------------------------------
// Scroll-Triggered Section Reveal
// --------------------------------------------------------------------------
function initScrollReveal() {
  const revealElements = document.querySelectorAll('.reveal, .reveal-stagger');
  
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('is-visible');
      }
    });
  }, { 
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  });
  
  revealElements.forEach(el => observer.observe(el));
}

// --------------------------------------------------------------------------
// Active Navigation Link Highlighting
// --------------------------------------------------------------------------
function initActiveNavHighlight() {
  const sections = document.querySelectorAll('section[id]');
  const navLinks = document.querySelectorAll('.nav__link');
  
  function updateActiveLink() {
    const scrollY = window.scrollY;
    const windowHeight = window.innerHeight;
    
    sections.forEach(section => {
      const sectionTop = section.offsetTop - 100;
      const sectionHeight = section.offsetHeight;
      const sectionId = section.getAttribute('id');
      
      if (scrollY >= sectionTop && scrollY < sectionTop + sectionHeight) {
        navLinks.forEach(link => {
          link.classList.remove('is-active');
          if (link.getAttribute('href') === '#' + sectionId) {
            link.classList.add('is-active');
          }
        });
      }
    });
    
    // Remove active state when at top of page
    if (scrollY < 100) {
      navLinks.forEach(link => link.classList.remove('is-active'));
    }
  }
  
  // Throttle scroll handler
  let ticking = false;
  window.addEventListener('scroll', () => {
    if (!ticking) {
      requestAnimationFrame(() => {
        updateActiveLink();
        ticking = false;
      });
      ticking = true;
    }
  });
  
  // Initial check
  updateActiveLink();
}

// --------------------------------------------------------------------------
// Enhanced Form Validation with Visual Feedback
// --------------------------------------------------------------------------
function initEnhancedFormValidation() {
  const form = document.getElementById('contactForm');
  if (!form) return;
  
  const inputs = form.querySelectorAll('.form-group__input, .form-group__textarea');
  
  inputs.forEach(input => {
    // Real-time validation on input
    input.addEventListener('input', () => {
      const formGroup = input.closest('.form-group');
      const value = input.value.trim();
      let isValid = false;
      
      if (input.type === 'email') {
        isValid = /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(value);
      } else {
        isValid = value.length > 0;
      }
      
      // Update visual states
      if (value.length > 0) {
        input.classList.toggle('is-valid', isValid);
        input.classList.toggle('is-error', !isValid);
        formGroup.classList.toggle('is-valid', isValid);
        formGroup.classList.toggle('has-error', !isValid);
      } else {
        // Reset states when empty
        input.classList.remove('is-valid', 'is-error');
        formGroup.classList.remove('is-valid', 'has-error');
      }
    });
  });
}

// --------------------------------------------------------------------------
// Phase 5: Live Homelab Stats Loading
// --------------------------------------------------------------------------

// Configuration for live stats
const HOMELAB_STATS_CONFIG = {
  // URL to your homelab-stats.json file
  // Options:
  // - Local file: './homelab-stats.json'
  // - GitHub Pages: 'https://username.github.io/repo/homelab-stats.json'
  // - Direct from homelab: 'https://stats.yourdomain.com/homelab-stats.json'
  statsUrl: 'http://stats.unfunky.xyz', // Set to null to use default values
  
  // How often to refresh stats (in milliseconds)
  // 5 minutes = 300000
  refreshInterval: 300000,
  
  // Default values if live stats aren't available
  defaults: {
    uptime: 99.7,
    security: 2847,
    containers: 24,
    storage: 6
  }
};

/**
 * Fetches live homelab stats from JSON endpoint
 */
async function fetchHomelabStats() {
  if (!HOMELAB_STATS_CONFIG.statsUrl) {
    return null;
  }
  
  try {
    const response = await fetch(HOMELAB_STATS_CONFIG.statsUrl, {
      cache: 'no-cache'
    });
    
    if (!response.ok) {
      throw new Error(`HTTP ${response.status}`);
    }
    
    const data = await response.json();
    return data;
    
  } catch (error) {
    console.warn('Could not fetch live homelab stats:', error.message);
    return null;
  }
}

/**
 * Updates the dashboard with live stats
 */
async function updateDashboardStats() {
  const stats = await fetchHomelabStats();

  if (!stats) {
    // Use defaults
    return;
  }

  // Update stat values (these will be animated by initCountUpAnimations)
  const statElements = [
    { id: 'stat-uptime', value: stats.uptime?.percentage, suffix: '%' },
    { id: 'stat-security', value: stats.security?.attacks_blocked_24h, suffix: '' },
    { id: 'stat-containers', value: stats.containers?.running, suffix: '' },
    { id: 'stat-storage', value: stats.storage?.total_tb, suffix: ' TB' },
    { id: 'stat-cpu', value: stats.cpu?.usage_percent, suffix: '%' },
    { id: 'stat-ram', value: stats.ram?.usage_percent, suffix: '%' }
  ];
  
  statElements.forEach(stat => {
    const el = document.getElementById(stat.id);
    if (el && stat.value !== undefined) {
      // Update the target value for animation
      el.dataset.target = stat.value;
      el.dataset.suffix = stat.suffix;
    }
  });
  
  // Update service health indicators
  if (stats.services && Array.isArray(stats.services)) {
    updateServiceHealth(stats.services);
  }
  
  // Update timestamp
  updateStatsTimestamp(stats.timestamp);
  
  console.log('📊 Homelab stats updated:', new Date().toLocaleTimeString());
}

/**
 * Updates service health indicators
 */
function updateServiceHealth(services) {
  const serviceList = document.querySelector('.homelab__health ul');
  if (!serviceList) return;
  
  services.forEach(service => {
    // Find the service item by name
    const serviceItems = serviceList.querySelectorAll('li');
    serviceItems.forEach(item => {
      const nameEl = item.querySelector('span[style*="font-weight: 500"]');
      if (nameEl && nameEl.textContent.trim() === service.name) {
        // Update LED indicator
        const led = item.querySelector('span[style*="border-radius: 50%"]');
        if (led) {
          const statusColors = {
            'healthy': 'var(--success-green)',
            'warning': 'var(--warning-orange)',
            'degraded': 'var(--warning-orange)',
            'unhealthy': 'var(--error-red)',
            'stopped': 'var(--error-red)'
          };
          const color = statusColors[service.status] || statusColors.healthy;
          led.style.background = color;
          led.style.boxShadow = `0 0 6px ${color}, 0 0 12px ${color}40`;
        }
        
        // Update status text
        const statusEl = item.querySelector('span[style*="font-family: var(--font-mono)"]');
        if (statusEl) {
          statusEl.textContent = service.status.charAt(0).toUpperCase() + service.status.slice(1);
          statusEl.style.color = service.status === 'healthy' ? 'var(--success-green)' : 
                                  service.status === 'warning' ? 'var(--warning-orange)' : 
                                  'var(--error-red)';
        }
      }
    });
  });
}

/**
 * Updates the "last updated" timestamp
 */
function updateStatsTimestamp(timestamp) {
  const timestampEl = document.getElementById('stats-timestamp');
  if (!timestampEl) return;
  
  if (timestamp) {
    const date = new Date(timestamp);
    const now = new Date();
    const diffMinutes = Math.floor((now - date) / 60000);
    
    let timeAgo;
    if (diffMinutes < 1) {
      timeAgo = 'just now';
    } else if (diffMinutes < 60) {
      timeAgo = `${diffMinutes} minute${diffMinutes > 1 ? 's' : ''} ago`;
    } else {
      const diffHours = Math.floor(diffMinutes / 60);
      timeAgo = `${diffHours} hour${diffHours > 1 ? 's' : ''} ago`;
    }
    
    timestampEl.textContent = `Last updated: ${timeAgo}`;
  } else {
    timestampEl.textContent = `Last updated: ${new Date().toLocaleTimeString()}`;
  }
}

/**
 * Initialize live stats system
 */
function initLiveStatsSimulation() {
  // Initial timestamp update
  updateStatsTimestamp();
  
  // If live stats URL is configured, set up auto-refresh
  if (HOMELAB_STATS_CONFIG.statsUrl) {
    // Initial fetch
    updateDashboardStats();
    
    // Set up periodic refresh
    setInterval(updateDashboardStats, HOMELAB_STATS_CONFIG.refreshInterval);
    
    // Also refresh when tab becomes visible again
    document.addEventListener('visibilitychange', () => {
      if (document.visibilityState === 'visible') {
        updateDashboardStats();
      }
    });
  }
}

// --------------------------------------------------------------------------
// Smooth Scroll Enhancement
// --------------------------------------------------------------------------
function initSmoothScroll() {
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function(e) {
      const href = this.getAttribute('href');
      if (href === '#') return;
      
      const target = document.querySelector(href);
      if (target) {
        e.preventDefault();
        target.scrollIntoView({
          behavior: 'smooth',
          block: 'start'
        });
      }
    });
  });
}

// --------------------------------------------------------------------------
// Add reveal classes to sections
// --------------------------------------------------------------------------
function addRevealClasses() {
  // Skills grid - staggered reveal
  const skillsGrid = document.querySelector('.skills__grid');
  if (skillsGrid) {
    skillsGrid.classList.add('reveal-stagger');
    skillsGrid.querySelectorAll('.skill-card').forEach(card => {
      card.classList.add('reveal-item');
    });
  }
  
  // Homelab widgets
  const homelabWidgets = document.querySelector('.homelab__widgets');
  if (homelabWidgets) {
    homelabWidgets.classList.add('reveal-stagger');
    homelabWidgets.querySelectorAll('.widget').forEach(widget => {
      widget.classList.add('reveal-item');
    });
  }
  
  // Project cards
  const projectCards = document.querySelector('.homelab__projects');
  if (projectCards) {
    projectCards.classList.add('reveal-stagger');
    projectCards.querySelectorAll('.project-card').forEach(card => {
      card.classList.add('reveal-item');
    });
  }
  
  // Section headers
  document.querySelectorAll('.skills__header, .resume__header, .homelab__header, .contact__header').forEach(header => {
    header.classList.add('reveal');
  });
  
  // Service health panel
  const healthPanel = document.querySelector('.homelab__health');
  if (healthPanel) {
    healthPanel.classList.add('reveal');
  }
  
  // Narrative cards
  const narrativeGrid = document.querySelector('.homelab__narrative-grid');
  if (narrativeGrid) {
    narrativeGrid.classList.add('reveal-stagger');
    narrativeGrid.querySelectorAll('.card-elevated').forEach(card => {
      card.classList.add('reveal-item');
    });
  }
  
  // Contact form
  const contactForm = document.querySelector('.contact__form');
  if (contactForm) {
    contactForm.classList.add('reveal');
  }
}

// --------------------------------------------------------------------------
// Initialize All Animations on DOM Ready
// --------------------------------------------------------------------------
document.addEventListener('DOMContentLoaded', () => {
  // Check for reduced motion preference
  const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
  
  if (!prefersReducedMotion) {
    addRevealClasses();
    initScrollReveal();
    initCountUpAnimations();
  }
  
  initActiveNavHighlight();
  initEnhancedFormValidation();
  initLiveStatsSimulation();
  initSmoothScroll();
  
  console.log('✨ Phase 3 animations initialized');
});
</script>
</body>
</html>
